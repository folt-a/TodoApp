<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingStart="0dp"
            android:paddingTop="2dp"
            android:paddingEnd="0dp"
            android:paddingBottom="2dp">

        <ImageView
                android:id="@+id/todoTag"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_margin="0dp"
                android:background="@color/white"
                android:foregroundGravity="left"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <EditText
                android:id="@+id/tagName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:autofillHints="no"
                android:backgroundTint="#B2DFDB"
                android:focusable="false"
                android:hint="@string/ui_placeholder_title"
                android:inputType="text"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/todoTag"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_conversion_wrapHeight="50"
                tools:layout_conversion_wrapWidth="1038" />

        <Button
                android:id="@+id/tagPatternLabel"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edittext_content"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="44dp"
                android:text="パターン"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tagColorLabel"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/tagPattern"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_margin="0dp"
                android:layout_marginEnd="8dp"
                android:background="@color/white"
                android:foregroundGravity="left"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tagPatternLabel"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_pattern1" />

        <Button
                android:id="@+id/tagColorLabel"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edittext_content"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="32dp"
                android:text="色"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <ImageView
                android:id="@+id/tagColor"
                android:layout_width="24dp"
                android:layout_height="36dp"
                android:layout_margin="0dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorPrimary"
                android:foregroundGravity="left"
                android:padding="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tagColorLabel"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>