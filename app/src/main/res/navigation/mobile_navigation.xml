            android:name="com.folta.todoapp.view.ui.todo.ToDoListFragment"
            android:label=""
            tools:layout="@layout/fragment_todo_list" />

    <fragment
            android:id="@+id/navigation_setting"
            android:name="com.folta.todoapp.view.ui.setting.SettingsFragment"
            android:label="@string/title_setting"
